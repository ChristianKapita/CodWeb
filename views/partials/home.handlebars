 {{!-- {{#let data=dataPost}} --}}
  {{#each dataPost}}
<div class="block">
    {{!-- User's profile picture --}}
    <img src="/public/imgs/google.png" alt="img" class="mr-3 mt-3 rounded-circle">
    {{!-- User's name --}}
    <h2>{{firstName}}
        <a href="#" class="username">{{username}}</a>
    </h2>
    {{!-- User's post --}}
    <p>{{content}}</p>
    {{!-- Created at --}}
    <small><i>{{createdAt}}</i></small>
</div>
 {{/each}} 